<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CREC Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <style>
        :root {
            --mobile-breakpoint: 768px;
            --min-column-width: 80px;
        }

        .search-filters {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .navbar-brand {
            font-weight: bold;
        }

        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

        .loading {
            text-align: center;
            padding: 3rem;
        }

        .error {
            color: #dc3545;
            text-align: center;
            padding: 2rem;
        }

        .language-toggle {
            cursor: pointer;
        }

        /* Table styles */
        .collections-table {
            width: 100%;
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
            table-layout: fixed;
        }

        .collections-table thead {
            background-color: #e9ecef;
        }

        .collections-table tbody tr {
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .collections-table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .collections-table tbody tr.selected {
            background-color: #e7f3ff;
        }

        .collections-table th,
        .collections-table td {
            padding: 0.75rem;
            vertical-align: middle;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .collections-table th {
            position: relative;
            user-select: none;
        }

        .collections-table th.resizable {
            min-width: var(--min-column-width);
        }

        .collections-table th .th-content {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            padding-right: 15px;
        }

        .collections-table th .resizer {
            position: absolute;
            top: 0;
            right: 0;
            width: 2px;
            cursor: col-resize;
            user-select: none;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.05);
        }

        .collections-table th .resizer:hover {
            background-color: #0d6efd;
        }

        .collections-table th.resizing {
            border-right: 2px solid #0d6efd;
        }

        .thumbnail-small {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 0.25rem;
        }

        .thumbnail-placeholder-small {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #e9ecef;
            color: #6c757d;
            border-radius: 0.25rem;
            font-size: 1.5rem;
        }

        .collections-table th.thumbnail-cell {
            width: 90px;
            min-width: var(--min-column-width);
        }

        /* Side panel styles */
        .detail-panel {
            position: fixed;
            top: 0;
            right: -600px;
            width: 600px;
            height: 100vh;
            background: white;
            box-shadow: -2px 0 10px rgba(0,0,0,0.1);
            transition: right 0.3s ease-in-out;
            z-index: 1050;
            overflow-y: auto;
        }

        .detail-panel.open {
            right: 0;
        }

        .detail-panel-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: rgba(0,0,0,0.5);
            z-index: 1040;
            display: none;
        }

        .detail-panel-overlay.show {
            display: block;
        }

        .detail-panel-header {
            padding: 1.5rem;
            background-color: #0d6efd;
            color: white;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .detail-panel-close {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            float: right;
            line-height: 1;
        }

        .detail-panel-body {
            padding: 1.5rem;
        }

        .detail-image {
            width: 100%;
            max-height: 400px;
            object-fit: contain;
            border-radius: 0.5rem;
        }

        .detail-section {
            margin-bottom: 1.5rem;
        }

        .detail-section h6 {
            color: #6c757d;
            font-size: 0.875rem;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .detail-section p {
            margin-bottom: 0.5rem;
        }

        /* Grid/Card view styles */
        .collection-card {
            transition: transform 0.2s;
            height: 100%;
        }

        .collection-card:hover {
            transform: translateY(-5px);
        }

        .card-img-top {
            height: 200px;
            object-fit: contain;
        }

        .thumbnail-placeholder {
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            background-color: #e9ecef;
            color: #6c757d;
        }

        .tag-badge {
            margin: 0.1rem;
        }

        .view-toggle-buttons {
            min-width: 200px;
        }

        .view-toggle-buttons .btn {
            min-width: 100px;
        }

        /* Advanced filters toggle section */
        .advanced-filters-section {
            padding-top: 0.5rem;
            border-top: 1px solid #dee2e6;
            margin-top: 1rem;
            transition: all 0.3s ease;
        }

        .advanced-filters-section.show {
            display: block !important;
        }

        /* Mobile responsive - auto-switch to grid view */
        @@media (max-width: var(--mobile-breakpoint)) {
            .detail-panel {
                width: 100%;
                right: -100%;
            }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="bi bi-collection"></i>
                CREC Web
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text language-toggle" id="languageToggle">
                    <i class="bi bi-translate"></i>
                    <span id="languageLabel">日本語 / English</span>
                </span>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Detail Panel Overlay -->
    <div class="detail-panel-overlay" id="detailPanelOverlay"></div>

    <!-- Detail Panel -->
    <div class="detail-panel" id="detailPanel">
        <div class="detail-panel-header">
            <button class="detail-panel-close" id="detailPanelClose">&times;</button>
            <h5 id="detailPanelTitle"></h5>
        </div>
        <div class="detail-panel-body" id="detailPanelBody">
            <!-- Detail content will be loaded here -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
